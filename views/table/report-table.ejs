<!-- Page Heading -->
<% var _xoa='' %>
<div class="container-fluid">
  
    <h1 class="h3 mb-2 text-gray-800">Bảng xem report</h1>
    <div class="form-row">
    <div class="form-group col-md-12">
      <button class="btn btn-primary float-left" id="btnthem" onclick=them()>Thêm(ADD Report)</button>
      <!-- <button class="btn btn-success float-right" id="btnxuatexcel" style="margin-bottom: 10px;" onclick=xuatexcel()>Xuất Excel</button> -->
    </div>
  </div>

  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr class="table-success">
              <th>Control</th>
              <th>name</th>
              <th>toname</th>
              <th>company</th>
            </tr>
          </thead>
          <tfoot>
            <tr class="table-success">
              <th>Control</th>
              <th>name</th>
              <th>toname</th>
              <th>company</th>
            </tr>
          </tfoot>
          <tbody>
            <% data.forEach((value)=>{ %>
            <% var bien = value._id %>

            <tr>
              <td>
                <div>
                  <div class="btn btn-info btn-circle btn-sm" onclick="Sua('<%= bien %>')" data-toggle="modal" data-target="#logoutModal2">
                    <i class="fas fa-info-circle"></i>
                  </div>
                  <div class="btn btn-danger btn-circle btn-sm" data-toggle="modal" data-target="#logoutModal" onclick="Luu('<%= bien %>')">
                    <i class="fas fa-trash">
                    </i>
                  </div>
                  <div class="btn btn-success btn-circle btn-sm" onclick="IN('<%= bien %>')">
                    <i class="fas fa-success">
                      In
                    </i>
                  </div>
                </div>

              </td>
              <td>
                <%= value.name %>
              </td>
              <td>
                <%= value.toname %>
              </td>
              <td>
                <%= value.company %>
              </td>

            </tr>


            <% }) %>


          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

