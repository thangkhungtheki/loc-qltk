<!-- Page Heading -->
<div class="container-fluid">
  <div>
    <h1 class="h3 mb-2 text-gray-800">View Devices</h1>
    <button class="btn btn-info" type="button" onclick="chuyenexcel()">Xuất excel</button>
  </div>
    <div class="card shadow mb-4">
        <!-- <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Database User Views </h6>
        </div> -->
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="table">
                            <th>STT</th>
                            <th>Tên Thiết Bị</th>
                            <th>Vị trí</th>
                            <th>Công suất(W)</th>
			                <th>Modem</th>
                            <th>Ghi Chú</th>
                            <th>username</th>
			                <th>Control</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr class="table">
                            <th>STT</th>
                            <th>Tên Thiết Bị</th>
                            <th>Vị trí</th>
                            <th>Công suất(W)</th>
			                <th>Modem</th>
                            <th>Ghi Chú</th>
			                <th>username</th>
			                <th>Control</th>
                        </tr>
                    </tfoot>

                    <tbody>
			<% var stt = 0 %>
                        
                        <% data.forEach((value) => { %>
                            <% var bien = value._id %>
                            <% var tendevice = value.name %>
			                <% stt = stt + 1 %>
                        
                                <td>
				<b><%= stt %></b>
				</td>
                                <td>
                                    <%= value.name %>
                                </td>
                               
                                
                                <td>
                                    <%= value.location %>
                                </td>
				                <td>
                                    <%= value.power %>
                                </td>
                                <td>
                                    <%= value.modem %>
                                </td>
                                <td>
                                    <%= value.note %>
                                </td>
                                
				                <td>
                                    <%= value.username %>
                                </td>
				                <td>
                                    
                                        <div class="btn btn-info btn-circle btn-sm" onclick="Sua('<%= bien %>', '<%= tendevice %>')"
                                            data-toggle="modal" data-target="#suamodal">
                                            <i class="fas fa-info-circle"></i>
                                        </div>
                                        <div class="btn btn-danger btn-circle btn-sm" data-toggle="modal"
                                            data-target="#xoauserModal" onclick="Xoatb('<%= bien %>', '<%= tendevice %>')">
                                            <i class="fas fa-trash">
                                            </i>
                                        </div>
                                        
                                    
                                          
                                </td>
                                
                                
                            </tr>
                            <% }) %>


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Xoa User Modal-->
