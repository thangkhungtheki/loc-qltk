<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Login Form</title>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:400,700'>
  <link rel="stylesheet" href="./style.css">
  <!-- Custom fonts for this template -->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body>
  <!-- partial:index.partial.html -->
  <%= hasErrors %>
  <%= messages %>
  <div class="container-fluid classbgimg">
    <div class="login-form">

      <form action="signin" method="post">
        <!-- <center><span style="color: white;">
            <h2>Welcome to "ERP" by Lộc</h2>
          </span></center> -->
        <div class="content">
          <div class="input-field">
            <input type="username" placeholder="Username" autocomplete="nope" name="username">
          </div>
          <div class="input-field">
            <input type="password" placeholder="Password" autocomplete="new-password" name="password">
          </div>
          <a style="background-color: white; color: #000; font-size: x-large;"># Welcome to "ERP" by Lộc #</a>
        </div>
        <div class="action">
          <button type="submit">Đăng nhập</button>
          <button type="button" onclick=register()>Tạo Tài Khoản</button>
        </div>
      </form>
    </div>
  </div>
  <!-- partial -->
  <!-- <script  src="./script.js"></script> -->
  <script>
    function register() {
      window.location.href = "/signup";
    }
  </script>
</body>
<style>
  .classbgimg {
    margin-top: 250px;
  }
</style>

</html>