    // Gửi dữ liệu đến backend endpoint bằng cách thay đổi action của form
    // (hoặc sử dụng XMLHttpRequest hoặc Fetch API)
    // this.action = "/your-backend-endpoint";

    // Mở tab mới
    window.open(this.action + "?" + new URLSearchParams(formData).toString(), '_blank');
});

</script>