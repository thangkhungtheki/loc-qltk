<div style="margin-bottom:20px; color: blue; position: relative; bottom: auto;" >
    <h3>FORM NHẬP VẬT TƯ</h3>
</div>
<form  action="luunhapvattu" method="post">
    
    <div class="form-group" id="select">
      <label>Chọn Loại Vật Tư</label>
      <select class="form-control" id="luachon" name="loaivattu" >
        <option value="" selected disabled hidden>Choose here ...</option>
        <option value="dienlanh">Điện Lạnh</option>
        <option value="dien">Điện</option>
        <option value="nuoc">Nước</option>
        <option value="cokhi">Cơ Khí</option>  
        <option value="son">Sơn</option>
      </select>
     
    </div>
    <div class="form-group" id="select">
      <label>Tên Vật Tư</label>
      <select class="form-control" id="vattu" name="Ma_vattu">
        
        
      </select>
     
    </div>
    <div class="form-group">
      <div class="form-group col-md-6">
        <label id="soluongton"></label>
      </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
